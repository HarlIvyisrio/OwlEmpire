// Custom Styles for OwlEmpire
// Injecting some neon rock vibes!

// Import Google Fonts
@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Roboto:wght@400;700&display=swap');

// General Body & Typography
body
    background: #0d0221 !important
    color: #f0f0f0 !important
    font-family: 'Roboto', sans-serif

// Neon Text Effect as a mixin
neon-text()
    font-family: 'Orbitron', sans-serif
    color: #fff
    text-shadow: 0 0 7px #fff, 0 0 10px #fff, 0 0 21px #fff, 0 0 42px #a020f0, 0 0 82px #a020f0, 0 0 92px #a020f0, 0 0 102px #a020f0, 0 0 151px #a020f0

// Header & Navbar
.navbar
    background: rgba(13, 2, 33, 0.8) !important
    backdrop-filter: blur(10px)
    border-bottom: 1px solid rgba(160, 32, 240, 0.5)

.logo-link .title
    neon-text()
    font-size: 2em

.navbar-menu a
    color: #f0f0f0 !important
    font-size: 1.1em
    transition: all 0.3s ease

.navbar-menu a:hover
    color: #fff !important
    text-shadow: 0 0 10px #a020f0

// Main Content & Cards
.card
    background: rgba(26, 10, 56, 0.7) !important
    border: 1px solid rgba(160, 32, 240, 0.6) !important
    box-shadow: 0 0 20px rgba(160, 32, 240, 0.3)
    transition: all 0.3s ease

.card:hover
    transform: translateY(-5px)
    box-shadow: 0 0 30px rgba(160, 32, 240, 0.6)

.card .card-header h1.title
    color: #f5d7ff
    neon-text()
    font-size: 1.8em

.article-entry
    color: #ccc
    line-height: 1.8

.article-entry a
    color: #d8b4fe !important
    text-decoration: none
    border-bottom: 1px dashed #d8b4fe

// Widgets
.widget
    @extend .card // Reuse card style

.widget .widget-title
    color: #e9d5ff
    border-bottom: 1px solid rgba(160, 32, 240, 0.5)
    padding-bottom: 10px
    margin-bottom: 10px

// Footer
.footer
    background: transparent !important
    color: #aaa !important

// Custom Button with Neon effect
.neon-button
    display: inline-block
    padding: 10px 20px
    color: #e9d5ff
    border: 2px solid #e9d5ff
    border-radius: 5px
    text-decoration: none
    font-weight: bold
    transition: all 0.3s ease
    text-shadow: 0 0 5px #e9d5ff

.neon-button:hover
    color: #fff
    background: #e9d5ff
    box-shadow: 0 0 20px #e9d5ff
    text-shadow: none 

// Add animation for neon flicker
@keyframes neon-flicker
    0%, 100% { text-shadow: 0 0 7px #fff, 0 0 10px #fff, 0 0 21px #fff, 0 0 42px #a020f0, 0 0 82px #a020f0 }
    50% { text-shadow: 0 0 4px #fff, 0 0 7px #fff, 0 0 15px #fff, 0 0 30px #a020f0, 0 0 60px #a020f0 }

.neon-text
    animation: neon-flicker 1.5s infinite alternate 